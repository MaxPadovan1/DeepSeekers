<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>

<VBox prefHeight="720.0" prefWidth="1280.0"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.teach.controller.LessonPlanController">

    <VBox fx:id="teacherSection" spacing="10" style="-fx-padding: 10;">
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Button fx:id="addLPButton" text="Add Lesson Plan" onAction="#onAddLP" disable="false"/>
            <Button fx:id="removeLPButton" text="Delete Lesson Plan" onAction="#onRemoveLP" disable="true"/>

            <Button fx:id="editLPButton" text="✏️ Edit Lesson Plan" onAction="#onEditLP" disable="true"/>
            <Button fx:id="saveLPButton" text="💾 Save" onAction="#onSaveEditedLP" disable="true"/>
        </HBox>
        <Label fx:id="teacherStatusLabel" text="" wrapText="true"/>
    </VBox>

    <!-- Assignment selector (shared) -->
    <HBox spacing="10" style="-fx-padding: 10;">
        <Label text="Lesson Plan:"/>
        <ComboBox fx:id="LPDropdown" prefWidth="300.0" onAction="#onLPSelected"/>
    </HBox>

    <!-- Assignment content (editable for teacher) -->
    <VBox spacing="10" style="-fx-padding: 10;">
        <Label text="Lesson Plan Title:"/>
        <TextField fx:id="LPTitleField" promptText="Enter title here" disable="true"/>

        <Label text="Lesson Plan Details:"/>
        <TextArea fx:id="LPDetailsText" prefHeight="120.0" wrapText="true" disable="true"/>

    </VBox>
</VBox>