<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<VBox prefHeight="720.0" prefWidth="1280.0"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.teach.controller.HomeworkPageController">

    <!-- Top controls for teacher -->
    <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10;">
        <Button fx:id="addWeekButton" text="➕ Add Week" onAction="#onAddWeek"/>
        <Button fx:id="removeWeekButton" text="➖ Remove Week" onAction="#onRemoveWeek"/>
        <ToggleButton fx:id="toggleViewButton" text="👁️‍🗨️ Student View" />
    </HBox>

    <!-- Dynamic accordion for weekly homework entries -->
    <Accordion fx:id="weekAccordion" VBox.vgrow="ALWAYS"/>
</VBox>

