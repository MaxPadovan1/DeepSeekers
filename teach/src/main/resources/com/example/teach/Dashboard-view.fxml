<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.teach.controller.DashboardController"
            prefWidth="1280" prefHeight="720">

    <!-- Top Bar -->
    <top>
        <HBox spacing="10" style="-fx-background-color: #2C3E50;"
              padding="10">

            <Button fx:id="hamburgerButton" onAction="#toggleDrawer"
                    style="-fx-background-color: transparent;">
                <graphic>
                    <VBox spacing="4">
                        <Rectangle width="24" height="3" arcWidth="2" arcHeight="2" fill="white" />
                        <Rectangle width="24" height="3" arcWidth="2" arcHeight="2" fill="white" />
                        <Rectangle width="24" height="3" arcWidth="2" arcHeight="2" fill="white" />
                    </VBox>
                </graphic>
            </Button>

            <Region HBox.hgrow="ALWAYS" />

            <MenuButton text="Ezekiel Landon"
                        style="-fx-text-fill: white;">
                <items>
                    <MenuItem text="Profile" />
                    <MenuItem text="Logout" />
                </items>
            </MenuButton>
        </HBox>
    </top>

    <!-- Side Drawer -->
    <left>
        <VBox fx:id="drawer"
              managed="false" visible="false"
              prefWidth="200"
              style="-fx-background-color: #34495E;">

            <children>
                <Label text="Dashboard"
                       style="-fx-text-fill: white; -fx-font-size: 18px; -fx-padding:10" />
                <Label text="Profile"
                       style="-fx-text-fill: white; -fx-font-size: 18px; -fx-padding:20" />
                <Label text="Class Info"
                       style="-fx-text-fill: white; -fx-font-size: 18px; -fx-padding:20" />
                <Label text="Lesson Plan"
                       style="-fx-text-fill: white; -fx-font-size: 18px; -fx-padding:20" />
                <Label text="Home page"
                       style="-fx-text-fill: white; -fx-font-size: 18px; -fx-padding:20" />
            </children>
        </VBox>
    </left>

    <!-- Secondary Bar -->
    <center>
        <VBox>
            <HBox style="-fx-background-color: #34495E;"
                  padding="10" spacing="10">
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="notificationButton"
                        onAction="#showNotifications"
                        style="-fx-background-color: transparent;">
                    <graphic>
                        <ImageView fitWidth="24" fitHeight="24">
                            <image>
                                <Image url="@images/notification_bell.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </HBox>

            <GridPane alignment="CENTER" hgap="40" vgap="40">
                <children>
                    <VBox GridPane.columnIndex="0" GridPane.rowIndex="0"
                          alignment="CENTER"
                          prefWidth="298" prefHeight="150"
                          style="-fx-background-color:white; -fx-background-radius:10;"
                          padding="20"
                          effect="dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0)">
                        <Label text="Subject 1"
                               style="-fx-font-size:16; -fx-font-weight:bold;" />
                    </VBox>

                    <VBox GridPane.columnIndex="1" GridPane.rowIndex="0"
                          alignment="CENTER"
                          prefWidth="298" prefHeight="150"
                          style="-fx-background-color:white; -fx-background-radius:10;"
                          padding="20"
                          effect="dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0)">
                        <Label text="Subject 2"
                               style="-fx-font-size:16; -fx-font-weight:bold;" />
                    </VBox>

                    <VBox GridPane.columnIndex="0" GridPane.rowIndex="1"
                          alignment="CENTER"
                          prefWidth="298" prefHeight="150"
                          style="-fx-background-color:white; -fx-background-radius:10;"
                          padding="20"
                          effect="dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0)">
                        <Label text="Subject 3"
                               style="-fx-font-size:16; -fx-font-weight:bold;" />
                    </VBox>

                    <VBox GridPane.columnIndex="1" GridPane.rowIndex="1"
                          alignment="CENTER"
                          prefWidth="298" prefHeight="150"
                          style="-fx-background-color:white; -fx-background-radius:10;"
                          padding="20"
                          effect="dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0)">
                        <Label text="Subject 4"
                               style="-fx-font-size:16; -fx-font-weight:bold;" />
                    </VBox>
                </children>
            </GridPane>
        </VBox>
    </center>
</BorderPane>