<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.teach.controller.SignUpViewBasicController"
      spacing="10" alignment="CENTER">
    <!-- Title -->
    <Label text="Sign Up" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <!-- Input Fields -->
    <TextField fx:id="idField" promptText="User ID" />
    <TextField fx:id="firstNameField" promptText="First Name" />
    <TextField fx:id="lastNameField" promptText="Last Name" />
    <TextField fx:id="emailField" promptText="Email" />
    <PasswordField fx:id="passwordField" promptText="Password" />

    <!-- Subjects for Students as Checkboxes -->
    <Label text="Select Subjects (Students):" />
    <ScrollPane prefHeight="150" prefWidth="320">
        <content>
            <VBox fx:id="subjectCheckboxContainer" spacing="5">
                <padding>
                    <Insets top="5" right="5" bottom="5" left="5"/>
                </padding>
            </VBox>
        </content>
    </ScrollPane>

    <!-- Subject for Teachers -->
    <Label text="Select Subject (Teachers):" />
    <ComboBox fx:id="subjectComboBox" prefWidth="320"/>

    <!-- Message Label -->
    <Label fx:id="messageLabel" textFill="red" />

    <!-- Action Buttons -->
    <HBox spacing="10" alignment="CENTER">
        <Button text="Sign Up" onAction="#handleSignUp" />
        <Button text="Cancel" onAction="#handleCancel" />
    </HBox>
</VBox>
