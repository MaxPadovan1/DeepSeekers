<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.teach.controller.ClassInfoController"
      spacing="10"
      style="-fx-padding:20;">

    <!-- Scrollable area; controller will populate the inner VBox -->
    <ScrollPane fitToWidth="true"
                style="-fx-background-color:transparent; -fx-border-color:transparent;">
        <content>
            <!-- Populated at runtime by ClassInfoController.setSubjects(...) -->
            <VBox fx:id="studentListContainer"
                  spacing="20"
                  style="-fx-padding:10;"/>
        </content>
    </ScrollPane>
</VBox>