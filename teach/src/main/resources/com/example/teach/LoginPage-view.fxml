<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Button?>

<VBox alignment="CENTER" spacing="20"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.teach.controller.LoginPageController">

    <!-- Header -->
    <HBox alignment="CENTER">
        <Label text="Welcome to DeepSeekers!&#10;In the deep, we seek."
               wrapText="true"
               style="-fx-font-size:36px; -fx-font-weight:bold;"/>
    </HBox>

    <!-- Login Form -->
    <VBox alignment="CENTER" spacing="15">
        <TextField fx:id="userId"
                   promptText="User ID"
                   maxWidth="300" prefHeight="30"/>

        <PasswordField fx:id="passwordField"
                       promptText="Password"
                       maxWidth="300" prefHeight="30"/>

        <Hyperlink fx:id="fPassword"
                   text="Forgot Password?"
                   onAction="#handleForgotPassword"/>

        <HBox alignment="CENTER" spacing="20">
            <Button text="Sign in"
                    fx:id="loginButton"
                    onAction="#handleLogin"/>
            <Button text="Sign Up"
                    fx:id="signUpButton"
                    onAction="#handleSignUp"/>
        </HBox>

        <Label fx:id="errorLabel"
               textFill="red"
               wrapText="true"/>
    </VBox>
</VBox>
