<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.teach.controller.ClassHomePageController"
      spacing="0">

    <!-- Grey Tab Bar -->
    <HBox spacing="80" style="-fx-background-color: #bdc3c7;" HBox.hgrow="ALWAYS">

        <!-- Home Icon Tab: back to class home -->
        <StackPane HBox.hgrow="ALWAYS" alignment="CENTER" onMouseClicked="#goToStudyPage">
            <Label text="🏠" style="-fx-font-size:25;"/>
        </StackPane>

        <!-- Study Text Tab -->
        <StackPane HBox.hgrow="ALWAYS" alignment="CENTER" onMouseClicked="#goToStudyPage">
            <Label text="Study" style="-fx-font-size:16; -fx-font-weight:bold;"/>
        </StackPane>

        <!-- Assignment Tab -->
        <StackPane HBox.hgrow="ALWAYS" alignment="CENTER" onMouseClicked="#goToAssignmentPage">
            <Label text="Assignment" style="-fx-font-size:16; -fx-font-weight:bold;"/>
        </StackPane>

        <!-- Grade Tab -->
        <StackPane HBox.hgrow="ALWAYS" alignment="CENTER" onMouseClicked="#goToGradePage">
            <Label text="Grade" style="-fx-font-size:16; -fx-font-weight:bold;"/>
        </StackPane>

        <!-- Homework Tab -->
        <StackPane HBox.hgrow="ALWAYS" alignment="CENTER" onMouseClicked="#goToHomeworkPage">
            <Label text="Homework" style="-fx-font-size:16; -fx-font-weight:bold;"/>
        </StackPane>

        <!-- Test Tab -->
        <StackPane HBox.hgrow="ALWAYS" alignment="CENTER" onMouseClicked="#goToTestPage">
            <Label text="Test" style="-fx-font-size:16; -fx-font-weight:bold;"/>
        </StackPane>

    </HBox>

    <!-- Main Content -->
    <HBox spacing="20" style="-fx-padding:20;" HBox.hgrow="ALWAYS">

        <!-- Left Column -->
        <VBox spacing="20" HBox.hgrow="ALWAYS">

            <!-- Class Info -->
            <VBox spacing="10"
                  style="-fx-background-color:#ecf0f1; -fx-padding:20; -fx-background-radius:10;"
                  VBox.vgrow="ALWAYS">
                <Label text="Class Info" style="-fx-font-size:18; -fx-font-weight:bold;"/>
                <TextArea text="Details..." style="-fx-font-size:14;" VBox.vgrow="ALWAYS"/>
            </VBox>

            <!-- Teacher Messages -->
            <VBox spacing="10"
                  style="-fx-background-color:#d0d3d4; -fx-padding:20; -fx-background-radius:10;"
                  VBox.vgrow="ALWAYS">
                <Label text="Teacher Messages" style="-fx-font-size:18; -fx-font-weight:bold;"/>
                <TextArea text="text..." style="-fx-font-size:14;" VBox.vgrow="ALWAYS"/>
            </VBox>

        </VBox>

        <!-- Right Column -->
        <VBox spacing="20"
              prefWidth="300"
              style="-fx-background-color:#bdc3c7; -fx-padding:20; -fx-background-radius:10;"
              HBox.hgrow="NEVER">

            <!-- Homework -->
            <Label text="Homework" style="-fx-font-size:18; -fx-font-weight:bold;"/>
            <VBox spacing="10"
                  style="-fx-background-color:#A9A9A9; -fx-padding:10; -fx-background-radius:8;">
                <TextArea prefRowCount="3"
                          text="Week1 Addition practice   Due: 2 weeks ago"
                          style="-fx-font-size:11; -fx-font-weight:bold;"/>
                <TextArea prefRowCount="3"
                          text="Week1 Subtraction practice   Due: 1 week ago"
                          style="-fx-font-size:11; -fx-font-weight:bold;"/>
                <TextArea prefRowCount="3"
                          text="Week1 Multiplication practice   Due: a day ago"
                          style="-fx-font-size:11; -fx-font-weight:bold;"/>
            </VBox>

            <!-- Test -->
            <Label text="Test" style="-fx-font-size:18; -fx-font-weight:bold;"/>
            <VBox spacing="10"
                  style="-fx-background-color:#A9A9A9; -fx-padding:10; -fx-background-radius:8;">
                <TextArea prefRowCount="3"
                          text="Math Test Multiplication practice Date: Friday"
                          style="-fx-font-size:11; -fx-font-weight:bold;"/>
                <TextArea prefRowCount="3"
                          text="Science Quiz Multiplication practice Date: Next Wednesday"
                          style="-fx-font-size:11; -fx-font-weight:bold;"/>
            </VBox>

            <!-- Assignment -->
            <Label text="Assignment" style="-fx-font-size:18; -fx-font-weight:bold;"/>
            <VBox spacing="10"
                  style="-fx-background-color:#A9A9A9; -fx-padding:10; -fx-background-radius:8;">
                <TextArea prefRowCount="3"
                          text="Assignment 1: Essay on Environment   Due: Next Monday"
                          style="-fx-font-size:11; -fx-font-weight:bold;"/>
                <TextArea prefRowCount="3"
                          text="Assignment 2: Science Project   Due: In 2 weeks"
                          style="-fx-font-size:11; -fx-font-weight:bold;"/>
            </VBox>

        </VBox>

    </HBox>

</VBox>
