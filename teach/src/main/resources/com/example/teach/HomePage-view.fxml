    <!-- Header Bar -->
    <top>
        <HBox spacing="10" style="-fx-background-color: #2C3E50; -fx-padding: 10px;">
            <!-- Hamburger Button -->
            <Button fx:id="hamburgerButton" onAction="#toggleDrawer" style="-fx-background-color: transparent;">
                <graphic>
                    <StackPane>
                        <VBox spacing="4">
                            <Rectangle arcHeight="2" arcWidth="2" fill="white" height="3" width="24" />
                            <Rectangle arcHeight="2" arcWidth="2" fill="white" height="3" width="24" />
                            <Rectangle arcHeight="2" arcWidth="2" fill="white" height="3" width="24" />
                        </VBox>
                    </StackPane>
                </graphic>
            </Button>

            <!--            <Button fx:id="hamburgerButton" onAction="#toggleDrawer" style="-fx-background-color: transparent;">-->
            <!--                <graphic>-->
            <!--                    <ImageView fitHeight="24" fitWidth="24">-->
            <!--                        <image>-->
            <!--                            <Image url="@hamburger.png" />-->
            <!--                        </image>-->
            <!--                    </ImageView>-->
            <!--                </graphic>-->
            <!--            </Button>-->

            <Region HBox.hgrow="ALWAYS" />

            <!-- Dropdown Menu Button -->
            <MenuButton style="-fx-text-fill: white;" text="Ezekiel Landon">
                <items>

                    <MenuItem text="Profile" />
                    <MenuItem text="Logout" />
                </items>
            </MenuButton>
        </HBox>
    </top>

    <!-- Side Drawer (Initially hidden or collapsed) -->
    <left>
        <VBox fx:id="drawer" managed="false" prefWidth="200.0" style="-fx-background-color: #34495E; -fx-padding: 10px;" visible="false">
            <Label style="-fx-text-fill: white;-fx-font-size: 18px;-fx-padding: 10px" text="Dashboard" />
            <Label style="-fx-text-fill: white;-fx-font-size: 18px;-fx-padding: 20px" text="Profile" />
            <Label style="-fx-text-fill: white;-fx-font-size: 18px;-fx-padding: 20px" text="Class Info" />
            <Label style="-fx-text-fill: white;-fx-font-size: 18px;-fx-padding: 20px" text="Lesson Plan" />

        </VBox>
    </left>

    <center>
        <VBox  >

        <!-- ðŸ“š New Top VBox: Study | Assignment | Grade | Homework -->
        <HBox spacing="120" style="-fx-background-color: #bdc3c7; -fx-padding: 10px; ">
            <VBox alignment="CENTER" prefWidth="150" style="-fx-background-color: #bdc3c7; -fx-background-radius: 8; -fx-padding: 10px;">
                <Label text="Study" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            </VBox>
            <VBox alignment="CENTER" prefWidth="150" style="-fx-background-color: #bdc3c7; -fx-background-radius: 8; -fx-padding: 10px;">
                <Label text="Assignment" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            </VBox>
            <VBox alignment="CENTER" prefWidth="150" style="-fx-background-color: #bdc3c7; -fx-background-radius: 8; -fx-padding: 10px;">
                <Label text="Grade" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            </VBox>
            <VBox alignment="CENTER" prefWidth="150" style="-fx-background-color: #bdc3c7; -fx-background-radius: 8; -fx-padding: 10px;">
                <Label text="Homework" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            </VBox>
            <VBox alignment="CENTER" prefWidth="150" style="-fx-background-color: #bdc3c7; -fx-background-radius: 8; -fx-padding: 10px;">
                <Label text="Test" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            </VBox>
        </HBox>

        <HBox spacing="20" style="-fx-padding: 20px;">
            <!-- Left Side: VBox containing two VBoxes vertically -->
            <VBox spacing="20" prefWidth="800" HBox.hgrow="ALWAYS">
                <VBox prefHeight="300" VBox.vgrow="ALWAYS" style="-fx-background-color: #ecf0f1; -fx-padding: 20px; -fx-background-radius: 10;">
                    <Label text="Big Box 1 (Top)" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                </VBox>

                <VBox prefHeight="300" VBox.vgrow="ALWAYS" style=" -fx-background-color:#d0d3d4; -fx-padding: 20px; -fx-background-radius: 10;">
                    <Label text="Big Box 2 (Bottom)" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                </VBox>
            </VBox>

            <!-- Right Side: Single VBox -->
            <VBox prefWidth="300" prefHeight="620" HBox.hgrow="ALWAYS" style="-fx-background-color: #bdc3c7; -fx-padding: 20px; -fx-background-radius: 10;">
                <Label text="Small Box 3 (Right)" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            </VBox>
        </HBox>
        </VBox>
    </center>





