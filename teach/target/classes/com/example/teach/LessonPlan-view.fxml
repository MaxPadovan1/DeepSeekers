<VBox prefHeight="720.0" prefWidth="1280.0"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.teach.controller.LessonPlanController">

    <!-- Control buttons visible only to teachers -->
    <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10;">
        <!-- Back Arrow Image Button -->
        <Button onAction="#goBack" style="-fx-background-color: transparent;">
            <graphic>
                <HBox spacing="10" alignment="CENTER_LEFT">
                <ImageView fitWidth="24" fitHeight="24">
                    <image>
                        <Image url="@images/back_aarow.png" /> <!-- Replace with your image path -->
                    </image>
                </ImageView>

            <Label text="Lesson Plan" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
        </HBox>
        </graphic>
        </Button>


        <Region HBox.hgrow="ALWAYS"/>

        <Button fx:id="addWeekButton" text="➕ Add Week" onAction="#onAddWeek"/>
        <Button fx:id="removeWeekButton" text="➖ Remove Week" onAction="#onRemoveWeek"/>
        <ToggleButton fx:id="toggleViewButton" text="👁️‍🗨️ Student View"/>
    </HBox>

    <!-- Accordion that holds all week panes, content dynamically added from controller -->
    <Accordion fx:id="weekAccordion" VBox.vgrow="ALWAYS"/>
</VBox>

