<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.teach.controller.SignUpController"
            prefHeight="500.0" prefWidth="600.0">

    <VBox alignment="CENTER" spacing="12" AnchorPane.leftAnchor="100" AnchorPane.rightAnchor="100"
          AnchorPane.topAnchor="30" AnchorPane.bottomAnchor="30">

        <Label text="Sign Up" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

        <TextField fx:id="idField" promptText="User ID" maxWidth="300" />
        <PasswordField fx:id="passwordField" promptText="Password" maxWidth="300" />
        <TextField fx:id="firstNameField" promptText="First Name" maxWidth="300" />
        <TextField fx:id="lastNameField" promptText="Last Name" maxWidth="300" />
        <TextField fx:id="emailField" promptText="Email" maxWidth="300" />
        <ComboBox fx:id="roleBox" promptText="Select Role" maxWidth="300" />

        <Label text="Select Subjects (Students only)" />
        <ListView fx:id="subjectsList" prefHeight="100" maxWidth="300" />

        <Button text="Sign Up" onAction="#handleSignUp" maxWidth="150" />
        <Button text="Back to Login" onAction="#goToLogin" maxWidth="150" />

        <Label fx:id="statusLabel" textFill="red" />
    </VBox>
</AnchorPane>
