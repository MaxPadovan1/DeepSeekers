<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.teach.controller.LoginPageController" >
    <HBox spacing="10.00" alignment="BOTTOM_LEFT" >
        <padding>
            <Insets left="50.0" />
        </padding>
            <Label fx:id="welcomeText" text="Welcome to DeepSeekers!&#10; In the deep,we seek." style="-fx-font-size:36px; -fx-font-weight: bold;" wrapText="true"/>
    </HBox>

    <VBox alignment="CENTER_LEFT" spacing="20.00">
        <padding>
            <Insets bottom="40.0" left="20.0" right="20.0" />
        </padding>

        <VBox alignment="CENTER_RIGHT" >
            <padding>
                <Insets  left="120.0" right="120.0" />
            </padding>
            <TextField fx:id="userId" promptText="User ID" maxWidth="500.0" prefHeight="30"/>
        </VBox>

            <VBox alignment="CENTER_RIGHT">
                <padding>
                    <Insets  left="120.0" right="120.0" />
                </padding>
                <PasswordField fx:id="passwordField" promptText="Password" maxWidth="500.0" prefHeight="30"/>
            </VBox>

            <VBox alignment="CENTER_RIGHT">
                <padding>
                    <Insets  left="120.0" right="120.0" bottom="20.0" />
                </padding>
                <Hyperlink fx:id="fPassword" text="Forgot Password?" maxWidth="500.0" maxHeight="150.0" />
            </VBox>

        <HBox alignment="CENTER_RIGHT" spacing="50.0">
            <padding>
                <Insets   right="300.0" />
            </padding>
            <Button text="Sign in" fx:id="loginButton" onAction="#handleLogin" style="" />
            <Button text="Sign Up" fx:id="signUpButton" onAction="#handleSignUp"/>
        </HBox>
        <Label fx:id="errorLabel" textFill="red"/>
    </VBox>
</VBox>